<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_2sdp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_3sdp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <ImageView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/img_obat"/>

            <TextView
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/itemHistoryResep_tvNamaDokter"
                android:layout_toLeftOf="@+id/itemHistoryResep_tvJumlah"
                android:text="Nama Dokter"/>

            <TextView
                android:layout_below="@+id/itemHistoryResep_tvNamaDokter"
                android:layout_marginLeft="@dimen/_70sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/itemHistoryResep_tvTanggal"
                android:layout_toLeftOf="@+id/itemHistoryResep_tvJumlah"
                android:text="Tanggal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/itemHistoryResep_tvJumlah"
                android:layout_alignParentRight="true"
                android:text="Jumlah Uang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/itemHistoryResep_tvStatus"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Dibayar"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"/>
</LinearLayout>