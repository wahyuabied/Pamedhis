<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_2sdp"
        android:id="@+id/itemMyResep_cvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/img_obat"/>
            <TextView
                android:id="@+id/itemMyResep_tvNamaDokter"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:text="Nama Dokter"/>

            <TextView
                android:layout_below="@+id/itemMyResep_tvNamaDokter"
                android:id="@+id/itemMyResep_tvSIP"
                android:textSize="8pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:text="SIP : 087/1998"/>

            <TextView
                android:layout_below="@+id/itemMyResep_tvSIP"
                android:layout_marginLeft="@dimen/_65sdp"
                android:id="@+id/itemMyResep_tvAlamatPraktek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Jln. Cemengkalang No 67, Yogyakarta"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/itemMyResep_ivMoreDetail"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>
</LinearLayout>